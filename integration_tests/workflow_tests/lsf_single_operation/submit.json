{
    "tasks": {
        "A": {
            "methods": [
                {
                    "name": "execute",
                    "service": "job",
                    "serviceUrl": "{{ lsfServiceUrl }}",
                    "parameters": {
                        "user": "{{ user }}",
                        "cwd": "{{ workingDirectory }}",
                        "environment": {{ environment }},
                        "command": "./ptero-test-command",
                        "pollingInterval": 3,
                        "rLimits": {
                            "cpuTime": 1
                        }
                    }
                }
            ]
        }
    },

    "links": [
        {
            "source": "input connector",
            "destination": "A",
            "dataFlow": {
                "in_a": "param"
            }
        },
        {
            "source": "A",
            "destination": "output connector",
            "dataFlow": {
                "param": "out_a"
            }
        }
    ],

    "inputs": {
        "in_a": "kittens"
    }
}
