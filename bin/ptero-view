#! /usr/bin/env perl

use strict;
use warnings FATAL => 'all';

use Ptero::HTTP qw(get make_request_and_decode_repsonse);
use Ptero::Proxy::Workflow;
use Ptero::Concrete::Workflow::ReportWriter;

use Log::Log4perl qw(:easy);

if (scalar @ARGV < 1) {
    print STDERR "Usage: $0 <workflow_url>\n";
    print STDERR "  Prints a view of the workflow to the screen.\n";
    exit 1;
}

my $url = shift @ARGV;

my $wf_proxy = Ptero::Proxy::Workflow->new($url);
my $concrete_workflow = $wf_proxy->concrete_workflow;

write_report($concrete_workflow);

sub write_report {
    my $workflow = shift;

    my $handle = new IO::Handle;
    STDOUT->autoflush(1);
    $handle->fdopen(fileno(STDOUT), 'w');

    my $report_writer = Ptero::Concrete::Workflow::ReportWriter->new($handle);
    $report_writer->write_report($workflow);
}
